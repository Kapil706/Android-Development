<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">



    <EditTextPreference
        android:defaultValue="Unknown Name"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Display Name"
        android:key="display_name_key" />
    <PreferenceCategory android:title="App Settings">

        <RingtonePreference
            android:defaultValue="enable"
            android:title="Ringtone preference"
            android:key="ringtone_preference_1" />
    </PreferenceCategory>
    <CheckBoxPreference
        android:defaultValue="false"
        android:title="Enable Auto read OTP"
        android:key="enable_otp_read" />
    <SwitchPreference
        android:defaultValue="false"
        android:title="Enable Notifications"
        android:key="receive_notifications" />


</PreferenceScreen>